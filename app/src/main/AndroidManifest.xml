<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.thanyani.miwork">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.thanyani.miwork.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.thanyani.miwork.NumbersActivity"
            android:label="@string/category_numbers"/>

        <activity android:name="com.example.thanyani.miwork.FamilyActivity"
            android:label="@string/category_family"/>

        <activity android:name="com.example.thanyani.miwork.ColorsActivity"
            android:label="@string/category_colors"/>

        <activity android:name="com.example.thanyani.miwork.PhrasesActivity"
            android:label="@string/category_phrases"/>
    </application>

</manifest>